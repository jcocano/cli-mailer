API_URL=https://your-api.example/v1/messaging/send/
EMAIL_TEMPLATE=your_template_id
MAILING_LIST=./examples/example.json
START_AT=0

# Optional: Bearer token (e.g. SendGrid) — sent as "Authorization: Bearer <key>"
# API_KEY=SG.xxxx

# Optional: Custom auth (e.g. Mailgun Basic) — full header value
# AUTH_HEADER=Basic base64(api:your-api-key)

# Optional: Dry run mode (no HTTP calls, just logs). Use "true" or "false".
# DRY_RUN=true

# Optional: Delay in milliseconds between each email (to respect rate limits)
# DELAY_MS=200
